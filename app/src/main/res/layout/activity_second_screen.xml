<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondScreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvListDisplay"
            android:layout_width="384dp"
            android:layout_height="441dp"
            android:text="Display List"
            android:textSize="34sp"
            tools:layout_editor_absoluteX="11dp"
            tools:layout_editor_absoluteY="48dp" />

        <Button
            android:id="@+id/btnDisplayList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Display List"
            tools:layout_editor_absoluteX="145dp"
            tools:layout_editor_absoluteY="513dp" />

        <Button
            android:id="@+id/btnFilterList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filtered List"
            tools:layout_editor_absoluteX="145dp"
            tools:layout_editor_absoluteY="589dp" />

        <Button
            android:id="@+id/btnReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return to Main Screen"
            tools:layout_editor_absoluteX="110dp"
            tools:layout_editor_absoluteY="667dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>